extends layout

block content
  h1= title

  table
    thead
      tr
        td(rowspan="2")
        td(id="month" colspan="7")
      tr(class="day7")
        td(id="today+0")
        td(id="today+1")
        td(id="today+2")
        td(id="today+3")
        td(id="today+4")
        td(id="today+5")
        td(id="today+6")
    tbody
      tr(id="schedule-container")
        th
          table(class="time")
            tr
              th 9:00
            tr
              th 9:30
            tr
              th 10:00
            tr
              th 10:30
            tr
              th 11:00
            tr
              th 11:30
            tr
              th 12:00
            tr
              th &nbsp;
            tr
              th 16:00
            tr
              th 16:30
            tr
              th 17:00
            tr
              th 17:30
            tr
              th 18:00
            tr
              th 18:30
            tr
              th 19:00
            tr
              th 19:30
            tr
              th(class="lastCell") 20:00
        - var schedule = schedules;
        - for (var i = 0; i < 7; i++)
          th
            div(class=schedule[i].date)
              table
                tr
                  th(class="scheduleDate") #{schedule[i].date}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_9_00}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_9_30}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_10_00}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_10_30}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_11_00}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_11_30}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_12_00}
                tr
                  td(class="emptyCell")
                    div(class="status") &nbsp;
                tr
                  td
                    div(class="status") #{schedule[i].reserve_16_00}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_16_30}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_17_00}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_17_30}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_18_00}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_18_30}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_19_00}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_19_30}
                tr
                  td
                    div(class="status") #{schedule[i].reserve_20_00}
  script(src='/javascripts/calendar.js')
  script(src='/javascripts/table_view.js')
  script(src='/javascripts/holiday.js')


  
